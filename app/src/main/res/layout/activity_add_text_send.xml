<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.android.pix.Activity.AddSendTextActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/preview_image"
        android:src="@mipmap/avatar_empty"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/add_title"/>

    <com.rey.material.widget.Button
        style="@style/Material.Widget"
        android:text="CHOOSE FRIENDS"
        android:paddingTop="8dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/post_add_text"
        android:layout_below="@+id/add_comment"
        android:layout_alignLeft="@+id/cancel_add_text"
        android:layout_alignStart="@+id/cancel_add_text"/>

    <com.rey.material.widget.Button
        style="@style/Material.Widget"
        android:text="CANCEL"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/cancel_add_text"
        android:layout_below="@+id/post_add_text"
        android:layout_centerHorizontal="true"/>

    <EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:hint="Title"
        android:textDirection="locale"
        android:paddingTop="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:hint="Comment"
        android:textDirection="locale"
        android:paddingTop="8dp"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/add_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>