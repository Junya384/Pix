<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.pix" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".PixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EditMembersActivity"
            android:label="@string/title_activity_edit_members" >
        </activity>
        <activity
            android:name=".LogInActivity"
            android:label="@string/title_activity_log_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MessageRecipientActivity"
            android:label="@string/title_activity_message_recipient" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" >

        </activity>
        <activity
            android:name=".ViewerPhotoActivity"
            android:label="@string/title_activity_viewer_photo" >
        </activity>
    </application>
</manifest>
